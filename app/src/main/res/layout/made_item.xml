            android:button="@null"
            android:id="@+id/id1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:layout_marginTop="8dp"
