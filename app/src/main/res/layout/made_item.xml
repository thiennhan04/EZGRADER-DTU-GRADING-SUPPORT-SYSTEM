            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:layout_marginTop="8dp"
            android:id="@+id/id3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/id4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/id5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/id6"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
