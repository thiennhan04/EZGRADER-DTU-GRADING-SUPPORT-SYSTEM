            android:id="@+id/id8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:layout_marginTop="8dp"
            android:id="@+id/id9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:background="@drawable/custom_radio_button"
            android:gravity="center"/>
    </RadioGroup>
</LinearLayout>
